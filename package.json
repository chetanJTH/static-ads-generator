{
  "name": "static-ads-generator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cd apps/frontend && npm run dev",
    "build": "cd apps/frontend && npm run build",
    "start": "cd apps/frontend && npm run start",
    "lint": "cd apps/frontend && npm run lint",
    "backend:dev": "cd apps/backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload",
    "backend:install": "cd apps/backend && pip install -r requirements.txt",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next",
    "install:all": "npm install && npm run backend:install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
